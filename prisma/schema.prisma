generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- EXISTING MODEL (Kept for backward compatibility) ---
model AnalysisResult {
  id             String   @id @default(uuid())
  role           String
  jobDescription String   @db.Text
  resumeText     String   @db.Text
  score          Int
  status         String
  feedback       Json
  createdAt      DateTime @default(now())
}

// --- NEW AGENTIC MODELS ---
model Resume {
  id          String       @id @default(uuid())
  createdAt   DateTime     @default(now())
  
  // Structured Fields
  fullName    String?
  summary     String?      @db.Text
  email       String?
  
  // Relations
  experiences Experience[]
  projects    Project[]
  skills      Skill[]
  educations  Education[]
}

model Experience {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  role        String
  company     String
  duration    String?
  description String   @db.Text
}

model Project {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  title       String
  techStack   String[] 
  description String   @db.Text
}

model Skill {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  category    String?  
  name        String
}

model Education {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  degree      String
  institution String
  year        String?
}

// --- NEW INTERVIEW MODELS ---
model InterviewSession {
  id        String   @id @default(uuid())
  role      String   // e.g., "Full Stack Developer"
  type      String   // "TECHNICAL", "BEHAVIORAL", "MOCK"
  messages  InterviewMessage[]
  createdAt DateTime @default(now())
}

model InterviewMessage {
  id        String   @id @default(uuid())
  sessionId String
  session   InterviewSession @relation(fields: [sessionId], references: [id])
  sender    String   // "USER" or "AI"
  content   String   @db.Text
  
  // JSON field to store AI analysis of the user's specific answer
  metrics   Json?    // { score: 85, clarity: "High", feedback: "..." }
  
  createdAt DateTime @default(now())
}

model User {
  id        String   @id
  email     String   @unique
  fullName  String?
  createdAt DateTime @default(now())
  
  // Relations
  roadmaps        Roadmap[]
  progress        MilestoneProgress[]
  quizAttempts    QuizAttempt[]
  achievements    UserAchievement[]
  dailyGoals      DailyGoal[]
  learningStats   LearningStats?
}

model Roadmap {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  
  // NEW: Roadmap metadata
  totalWeeks    Int      @default(0)
  difficulty    String   @default("intermediate") // beginner, intermediate, advanced
  isCompleted   Boolean  @default(false)
  completedAt   DateTime?
  
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestones Milestone[]
}

model Milestone {
  id          String  @id @default(cuid())
  roadmapId   String
  title       String
  description String
  week        Int
  
  // NEW: Additional metadata
  order       Int     @default(0)
  estimatedHours Int  @default(10)
  difficulty  String  @default("intermediate")
  
  roadmap    Roadmap            @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  resources  Resource[]
  progress   MilestoneProgress[]
  quizzes    Quiz[]
}

model Resource {
  id          String @id @default(cuid())
  milestoneId String
  title       String
  url         String
  type        String
  
  milestone Milestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
}

// ==========================================
// NEW MODELS: PROGRESS TRACKING
// ==========================================

model MilestoneProgress {
  id          String   @id @default(cuid())
  userId      String
  milestoneId String
  status      String   @default("not_started") // not_started, in_progress, completed
  
  // Progress details
  startedAt     DateTime?
  completedAt   DateTime?
  timeSpentMins Int       @default(0)
  
  // Resources completed
  resourcesViewed String[] @default([])
  
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestone Milestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  
  @@unique([userId, milestoneId])
}

// ==========================================
// NEW MODELS: QUIZ SYSTEM
// ==========================================

model Quiz {
  id          String @id @default(cuid())
  milestoneId String
  
  question      String
  options       String[] // JSON array of options
  correctIndex  Int
  explanation   String
  difficulty    String   @default("medium") // easy, medium, hard
  
  milestone Milestone     @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  attempts  QuizAttempt[]
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  
  selectedIndex Int
  isCorrect     Boolean
  attemptedAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

// ==========================================
// NEW MODELS: GAMIFICATION
// ==========================================

model LearningStats {
  id     String @id @default(cuid())
  userId String @unique
  
  // XP & Levels
  totalXP       Int @default(0)
  level         Int @default(1)
  
  // Streaks
  currentStreak Int @default(0)
  longestStreak Int @default(0)
  lastActiveDate DateTime?
  
  // Achievements
  milestonesCompleted Int @default(0)
  quizzesPassed       Int @default(0)
  totalTimeSpentMins  Int @default(0)
  
  // Gamification
  totalPoints   Int @default(0)
  badgeCount    Int @default(0)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserAchievement {
  id     String @id @default(cuid())
  userId String
  
  badgeId     String
  badgeName   String
  badgeIcon   String
  description String
  earnedAt    DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DailyGoal {
  id     String @id @default(cuid())
  userId String
  date   DateTime
  
  // Goals
  targetMins     Int  @default(30)
  targetQuizzes  Int  @default(3)
  
  // Progress
  minsCompleted   Int  @default(0)
  quizzesSolved   Int  @default(0)
  isCompleted     Boolean @default(false)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
}

