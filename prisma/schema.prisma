generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- EXISTING MODEL (Kept for backward compatibility) ---
model AnalysisResult {
  id             String   @id @default(uuid())
  role           String
  jobDescription String   @db.Text
  resumeText     String   @db.Text
  score          Int
  status         String
  feedback       Json
  createdAt      DateTime @default(now())
}

// --- NEW AGENTIC MODELS ---
model Resume {
  id          String       @id @default(uuid())
  createdAt   DateTime     @default(now())
  
  // Structured Fields
  fullName    String?
  summary     String?      @db.Text
  email       String?
  
  // Relations
  experiences Experience[]
  projects    Project[]
  skills      Skill[]
  educations  Education[]
}

model Experience {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  role        String
  company     String
  duration    String?
  description String   @db.Text
}

model Project {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  title       String
  techStack   String[] 
  description String   @db.Text
}

model Skill {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  category    String?  
  name        String
}

model Education {
  id          String   @id @default(uuid())
  resumeId    String
  resume      Resume   @relation(fields: [resumeId], references: [id])
  degree      String
  institution String
  year        String?
}

// --- NEW INTERVIEW MODELS ---
model InterviewSession {
  id        String   @id @default(uuid())
  role      String   // e.g., "Full Stack Developer"
  type      String   // "TECHNICAL", "BEHAVIORAL", "MOCK"
  messages  InterviewMessage[]
  createdAt DateTime @default(now())
}

model InterviewMessage {
  id        String   @id @default(uuid())
  sessionId String
  session   InterviewSession @relation(fields: [sessionId], references: [id])
  sender    String   // "USER" or "AI"
  content   String   @db.Text
  
  // JSON field to store AI analysis of the user's specific answer
  metrics   Json?    // { score: 85, clarity: "High", feedback: "..." }
  
  createdAt DateTime @default(now())
}